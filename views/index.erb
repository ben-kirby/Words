<div class="row">
<% if @list.kind_of?(Array) %>
  <% @list.each do |i| %>
    <a href="/word/<%= i.id %>"><%= i.new_word %></a>
  <% end %>
<% else %>
  <% return false %>
<% end %>

</div>

<div class="row">
  <form action="/" method="post">
    <div class="form-group">
      <input type="text" name="new_word" placeholder="New Word">
    </div>

    <div class="for-group">
      <input type="text" name="definition" placeholder="Definition">
    </div>
    <button type="submit" name="button">Submit!</button>
  </form>
</div>


